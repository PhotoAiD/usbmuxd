{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Build and Debug usbmuxd (dev mode)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/src/usbmuxd",
            "args": ["-f", "-v", "-P", "NONE", "-S", "/tmp/usbmuxd"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build",
            "miDebuggerPath": "/usr/bin/gdb"
        },
        {
            "name": "Build and Debug usbmuxd (as root)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/src/usbmuxd",
            "args": ["-f", "-v"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build",
            "miDebuggerPath": "sudo",
            "miDebuggerArgs": "gdb"
        },
        {
            "name": "Build Only",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/src/usbmuxd",
            "args": ["--version"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "preLaunchTask": "Build",
            "miDebuggerPath": "/usr/bin/gdb"
        },
        {
            "name": "Attach to usbmuxd",
            "type": "cppdbg",
            "request": "attach",
            "program": "/usr/sbin/usbmuxd",
            "processId": "${command:pickProcess}",
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}