{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Configure",
            "type": "shell",
            "command": "./autogen.sh",
            "group": "build",
            "problemMatcher": [],
            "detail": "Generate configure script and configure the build"
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "make",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "dependsOn": ["Configure"],
            "detail": "Build usbmuxd"
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "make clean",
            "group": "build",
            "problemMatcher": [],
            "detail": "Clean build artifacts"
        },
        {
            "label": "Install Dependencies",
            "type": "shell",
            "command": "echo 'Please run: sudo apt-get update && sudo apt-get install -y build-essential pkg-config checkinstall git autoconf automake libtool-bin libplist-dev libusbmuxd-dev libimobiledevice-dev libimobiledevice-glue-dev libusb-1.0-0-dev udev'",
            "group": "build",
            "problemMatcher": [],
            "detail": "Display command to install dependencies"
        },
        {
            "label": "Rebuild",
            "type": "shell",
            "command": "make clean && ./autogen.sh && make",
            "group": "build",
            "problemMatcher": ["$gcc"],
            "detail": "Clean and rebuild from scratch"
        }
    ]
}